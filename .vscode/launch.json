{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run All Pester Tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "Invoke-Pester",
            "args": [
                "-Path",
                "${workspaceFolder}/Tests",
                "-Output",
                "Detailed",
                "-ExcludeTag",
                "Integration"
            ],
            "cwd": "${workspaceFolder}",
            "createTemporaryIntegratedConsole": false,
            "preLaunchTask": null,
            "postDebugTask": null,
            "console": "integratedTerminal"
        },
